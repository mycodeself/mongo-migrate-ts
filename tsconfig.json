{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "esnext",
    "lib": ["es6"],
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "declaration": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "examples",
    "__tests__"
  ],
  "include": [
    "lib/**/*",
    "bin/index.ts"
  ]
}